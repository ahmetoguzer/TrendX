# TrendX Configuration

# Database
DATABASE_URL=sqlite:///.data/trendx.db

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# AI/LLM Configuration
AI_PROVIDER=openai
AI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7

# Twitter/X Configuration
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Reddit Configuration
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=TrendX/1.0

# Google Trends Configuration
GOOGLE_TRENDS_GEOLOCATION=TR
GOOGLE_TRENDS_TIMEFRAME=now 1-d

# YouTube Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here

# Scheduler Configuration
SCHEDULER_TIMEZONE=Europe/Istanbul
POSTING_INTERVAL_MINUTES=60
QUIET_HOURS_START=23
QUIET_HOURS_END=7
MAX_POSTS_PER_DAY=20

# Safety Configuration
SAFE_MODE=true
ALLOW_MEDIA_DOWNLOAD=false
MAX_MEDIA_SIZE_MB=10
BANNED_KEYWORDS=spam,scam,fake
URL_WHITELIST=reddit.com,youtube.com,google.com,bbc.com,cnn.com

# Web Dashboard
WEB_HOST=127.0.0.1
WEB_PORT=8000
WEB_DEBUG=false

# Rate Limiting
RATE_LIMIT_POSTS_PER_HOUR=4
RATE_LIMIT_REQUESTS_PER_MINUTE=60
